{
  "name": "remix-lambda-techbypro-blog",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "yarn run build:remix && yarn run build:lambda",
    "build:deploy": "yarn run build && yarn run deploy",
    "build:lambda": "node build.cjs",
    "build:remix": "remix vite:build",
    "deploy": "cd infrastructure && pulumi up --yes --skip-preview",
    "preview": "cd infrastructure && pulumi preview",
    "dev": "remix vite:dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "ui": "shadcn"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@remix-run/architect": "^2.9.2",
    "@remix-run/node": "^2.9.2",
    "@remix-run/react": "^2.9.2",
    "@remix-run/serve": "^2.9.2",
    "aws-lambda": "^1.0.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "esbuild": "^0.21.4",
    "isbot": "^4.1.0",
    "lucide-react": "^0.511.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.588.0",
    "@aws-sdk/client-dynamodb": "^3.588.0",
    "@aws-sdk/client-sns": "^3.588.0",
    "@aws-sdk/client-sqs": "^3.588.0",
    "@aws-sdk/client-ssm": "^3.588.0",
    "@aws-sdk/lib-dynamodb": "^3.588.0",
    "@remix-run/dev": "^2.9.2",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.5.3",
    "shadcn": "^2.5.0",
    "tailwindcss": "3",
    "typescript": "^5.1.6",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
